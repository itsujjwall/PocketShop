<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ConfirmFinalOrderActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="Confirm your Shipping Details"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_margin="24dp"
        android:textAlignment="center"
        android:textStyle="bold"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="40dp"
        android:textColorHint="@color/grey">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/shipping_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   your Name"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:inputType="text"
            android:textColorHint="@color/grey"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/shipping_phone"
            app:errorTextColor="#B72727"
            android:drawableRight="@drawable/ic_phone_black_24dp"
            android:drawableTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Phone"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:textColorHint="@color/grey"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Phone"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/shipping_address"
            app:errorTextColor="#B72727"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Address"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:inputType="text"
            android:textColorHint="@color/grey"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Address"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/shipping_city"
            app:errorTextColor="#B72727"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   City"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:inputType="text"
            android:textColorHint="@color/grey"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/City"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/shipping_pincode"
            app:errorTextColor="#B72727"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Pincode"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:textColorHint="@color/grey"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/final_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttons"
        android:layout_margin="20dp"
        android:text="Confirm"
        android:textSize="22sp"/>

</RelativeLayout>