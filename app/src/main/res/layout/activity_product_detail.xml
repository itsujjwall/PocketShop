<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Buyers.ProductDetailActivity">


    <ImageView
        android:id="@+id/product_detail_image_pd"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/product_name_in_pd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_detail_image_pd"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:text="Product Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/product_description_in_pd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_in_pd"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:text="Product Description"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/product_price_in_pd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description_in_pd"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:text="Product Price"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/product_quantity_count_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/product_price_in_pd"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        app:finalNumber="10"
        app:initialNumber="1"
        android:layout_above="@id/buy_btn"
        app:textSize="10sp" />


    <Button
        android:id="@+id/buy_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_to_cart_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimary"
        android:elevation="8dp"
        android:text="Buy Now"
        android:textSize="20sp" />

    <Button
        android:id="@+id/add_to_cart_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:elevation="8dp"
        android:text="Add to Cart"
        android:textSize="20sp" />


</RelativeLayout>