<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Seller.SellerCategoryActivity">

    <TextView
        android:id="@+id/slogan_caegory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="26sp"
        android:textStyle="bold" />

<LinearLayout
    android:id="@+id/main_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/slogan_caegory"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginStart="24dp"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Clothes :"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/linear_layout_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t_shirt"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/tshirts" />

        <ImageView
            android:id="@+id/sports_t_shirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/sports" />

        <ImageView
            android:id="@+id/female_dress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/female_dresses" />

        <ImageView
            android:id="@+id/sweaters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/sweather" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginStart="24dp"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Wearing Accessories :"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/linear_layout_category02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/glasses" />

        <ImageView
            android:id="@+id/purse_bag"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/purses_bags" />

        <ImageView
            android:id="@+id/hats"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/hats" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/shoess" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginStart="24dp"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Electronics :"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/linear_layout_category03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headphones"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/headphoness" />

        <ImageView
            android:id="@+id/laptops"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/laptops" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/watches" />

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:src="@drawable/mobiles" />

    </LinearLayout>

</LinearLayout>

    <Button
        android:id="@+id/update_order_details_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/check_new_order_btn"
        android:background="@color/colorAccent"
        android:text="Modify Orders Details"
        android:textSize="22sp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/check_new_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:background="@color/colorAccent"
        android:text="Check New Orders"
        android:textSize="22sp"
        android:textAllCaps="false"/>

</RelativeLayout>