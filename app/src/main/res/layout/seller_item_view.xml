<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="15dp"
    android:backgroundTint="@color/white"
    app:cardElevation="15dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/sproduct_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sproduct_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/sproduct_name"
            android:text="Product Status"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/sproduct_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/sproduct_status"
            android:scaleType="centerCrop"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/sproduct_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_below="@id/sproduct_image"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sproduct_description_in_pil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sproduct_price"
            android:text="Product Description"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>


